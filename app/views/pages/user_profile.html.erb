<div class="container-fluid">
  <div class="card">
    <div class="card-header">
      Profile
    </div>
    <div class="card-body d-flex flex-column">
      <div>
        <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
        <h1><%= current_user.name %></h1>
      </div>
      <h5 class="card-title">About me</h5>
      <p class="card-text">Write something about you</p>
      <p class="card-text">Your are learning to become a : <%= current_user.side == "Light"? "Jedi" : "Sith" %><%= current_user.side %></p>
      <%= link_to "Edit", edit_user_registration_path, class:'btn btn-light w-3' %>
    </div>
  </div>

  <div class="">
    <h1>Your Bookings</h1>
    <% current_user.bookings.each do |booking| %>
      <div class="card-product">
        <%= image_tag booking.lesson.skill_picture, alt: "skill picture", width: 200 %>
      <div class="card-product-infos">
        <h2><%= booking.lesson.skill_name %></h2>
        <p><%= booking.lesson.quick_description %>.</p>
      </div>
    <% end %>
  </div>
</div>
