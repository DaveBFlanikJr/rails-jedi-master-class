
<div class="container center mt-4 text-light">
  <%= simple_form_for([ @lesson]) do |f| %>
    <%= f.input :skill_name, class: "text-light" %>
    <%= f.input :description, as: :text, placeholder: "Enter class description.", class: "text-light" %>
    <%= f.input :price, as: :integer, placeholder: "Imperial Credits", class: "text-light" %>
    <%= f.input :start_at, as: :date, html5: true, class: "text-light" %>
    <%= f.input :end_at, as: :date, html5: true, class: "text-light" %>
    <%#= f.input :start_at, as: :date, start_year: Date.today - 90,
                              end_year: Date.today - 12, discard_day: true,
                              order: [:month, :year] %>
    <%#= f.input :start_at, as: :string, wrapper: :start_at, input_html: {value: I18n.l(f.object.start_at)} %>
    <%= f.input :skill_picture, as: :file, class: "text-light" %>
    <%= f.association :user, :as => :hidden, :input_html => { :value => current_user.id }  %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>

</div>
