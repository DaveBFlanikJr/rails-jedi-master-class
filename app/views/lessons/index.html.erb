<div class ="container">

  <h1>All our <%= Lesson.count %> lessons</h1>

  <div class="row justify-content-around">
    <% @lessons.each do |lesson| %>
      <div class="card col-4 mt-4" style="width: 18rem;">
      <div class="mt-3">
        <%= image_tag lesson.skill_picture, alt: "skill picture", class: "w-100" %>
      </div>

        <div class="card-body">
          <h5 class="card-title"><%= lesson.skill_name %></h5>
          <% if lesson.user.status == "Jedi" %>
            <p>Taught by: <%= lesson.user.name %>, <%= lesson.user.side %> side</p>
          <% end %>
          <p class="card-text"><%= lesson.quick_description %></p>
          <p class="card-text">From <%= lesson.start_at %> (<%= lesson.start_at.strftime("%A") %>) to <%= lesson.end_at %> (<%= lesson.end_at.strftime("%A") %>) </p>
          <%= link_to "See more", lesson_path(lesson), class:"btn btn-light"  %>

        </div>
      </div>
    <% end  %>
  </div>
</div>
